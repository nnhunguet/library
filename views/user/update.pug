extend ../layout/common.pug
block content
  h1.display-4.text-center Update 
  p.text-center.font-weight-light NguyenNghiaHung
  
  table.table
    tr 
      th Avatar
      th Email
    tr 
      td
        img(src=user.avatar)
        form(action='/user/update'+user.id method='POST')
          input(type='file')
          button.btn.btn-primary(type='submit') Change
      td 
        p=user.email
  