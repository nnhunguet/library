extends ../layout/common.pug
block content
  
  form(method="GET" action="/book/search").form-inline
    .form-group.mr-2
      label(for="title") 
      input.form-control(type="text" name="q" id="title" value=value ? value : '')
    button(type="submit").btn.btn-primary Search
  form(method="GET" action="/book/create") 
    .form-group
      label(for="create") Create Book : 
    button(type="submit") Create Book
  table.table.table-dark
      tr
        td 
          b Title
        td 
          b Tools
      each book in books
        tr
          td
            span=book.title
          td
            a(href='/book/view/'+book.id) 
              button.btn.btn-light(type='button') View
            a(href="/book/update/"+book.id) 
              button.btn.btn-light(type='button') Update
            a(href="/book/delete/"+book.id) 
              button.btn.btn-light(type='button') Delete