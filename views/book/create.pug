extends ../layout/common.pug
block content
  h1.display-4.text-center Create Book
  p.text-center.font-weight-light Coders-Tokyo
  form(action="/book/create" method="POST")
    .form-group
      label(for='title') Title
      input#email.form-control(type='text' name='title')
    .form-group
      label(for='desc') Description
      input#password.form-control(type='text-area' name='desc')
    button.btn.btn-primary(type='submit') Create